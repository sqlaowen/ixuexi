    <script type="text/javascript" src="@Url.Content("~/Plugin/BUI/assets/js/bui-min.js")"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $.ajax({
                url: '/Menu/GetMenu/'
                , type: 'POST'
                , async: false
                , data: {}
                , dataType: 'json'
                , success: function (data, status, jqxhr) {
                    if (data.length == 0) {
                        window.console && console.log('请配置菜单');
                        return;
                    }
                    var li = '';
                    $.each(data, function (i, v) {
                        if (i == 0) {
                            li += '<li class="nav-item dl-selected">'
                               + '     <div class="nav-item-inner nav-home">' + v.text + '</div>'
                               + '</li>';
                        }
                        else {
                            li += '<li class="nav-item">'
                               + '     <div class="nav-item-inner nav-order">' + v.text + '</div>'
                               + '</li>';
                        }
                    });
                    $('#J_Nav').append(li);
                    var config = data;
                    BUI.use('common/main', function () {
                        new PageUtil.MainPage({
                            modulesConfig: config
                        });
                    });
                }
                , error: function (xhr, status, ex) {
                    window.console && console.log('获取菜单失败，返回状态：【' + status + '】 失败信息如下：');
                    window.console && console.log(ex);
                }
            })
        });
    </script>

