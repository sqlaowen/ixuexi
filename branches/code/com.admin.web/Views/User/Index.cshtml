@{
    ViewBag.Title = "Index";
}

<!-- 操作 -->
<div class="row-fluid">
    <div class="span12 text-right" style="margin-bottom:5px;">
        <input type="button" class="btn btn-info btn-sm" value="添加" name="btnAdd" data-bind="click:function(d,e){addOne(d,e,'/User/Add/')}" />
        <a class="btn btn-info btn-sm" href="javascript:;" data-bind="click: function(d,e){editOne(d,e,'/User/Add/')}">修改</a>
        <input type="button" class="btn btn-info btn-sm" value="删除" name="btnDel" data-bind="click:function(d,e){delBatch(d,e,'/User/DelBatch/')}" />
        <input type="button" class="btn btn-info btn-sm" value="查询" name="btnsearch" data-bind="click:search" />
    </div>
</div>
<!-- 表单 -->
<div class="row-fluid">
    <div class="span12 table-responsive">
        <form role="form" id="form" class="form-horizontal">
            <table class="table table-striped table-bordered table-hover">
                <tr>
                    <td style="width:60px;">
                        真实名：
                    </td>
                    <td>
                        <input type="text" name="Name" />
                    </td>
                    <td style="width:60px;">
                        账号：
                    </td>
                    <td>
                        <input type="text" name="Account" />
                    </td>
                    <td style="width:60px;">
                        状态：
                    </td>
                    <td>
                        <select name="State">
                            <option value="">--请选择--</option>
                            <option value="1">可用</option>
                            <option value="0">禁用</option>
                        </select>
                    </td>
                </tr>
            </table>
            <input type="hidden" id="hidPageIndex" name="pageIndex" value="1" />
        </form>
    </div>
</div>
<!-- 查询结果列表 -->
<div class="row-fluid">
    <div class="span12 table-responsive">
        <table class="table table-striped table-bordered table-hover" id="table">
            <thead style="background-color:#DBEAF9;">
                <tr>
                    <th style="width:60px;">
                        <label><input type="checkbox" name="ckfather" />No.</label>
                        <input type="hidden" name="_hidid_" />
                    </th>
                    <th>
                        用户ID
                    </th>
                    <th>
                        真实名
                    </th>
                    <th>
                        性别
                    </th>
                    <th>
                        账号
                    </th>
                    <th>
                        状态
                    </th>
                    <th>
                        备注
                    </th>
                    <th>
                        操作时间
                    </th>
                    <th>
                        操作人
                    </th>
                    
                </tr>
            </thead>
            <tbody data-bind="foreach: items">
                <tr>
                    <td>
                        <label>
                            <input type="checkbox" name="ckson" data-bind="value:UserId" />
                            <span data-bind="text:N0"></span>
                        </label>
                    </td>
                    <td data-bind="text:UserId"></td>
                    <td data-bind="text:Name"></td>
                    <td data-bind="text:Sex==1?'男':(Sex==0?'女':'--')"></td>
                    <td data-bind="text:Account"></td>
                    <td data-bind="text:State==1?'可用':(State==0?'禁用':'--')"></td>
                    <td data-bind="text:Note"></td>
                    <td data-bind="text:UpdateTime"></td>
                    <td data-bind="text:UpdateUser"></td>
                    
                </tr>
            </tbody>
        </table>
    </div>
</div>
<!-- 分页 -->
<div class="row-fluid">
    <div class="span12">
        <ul class="pagination mypager" id="personPagination"></ul>
    </div>
</div>

@section style{
    <script type="text/javascript">
        var dataUrl = '/User/GetList/';
        var pageSize = 20;
        var formContainer = 'form';
        var bindingContainer = 'body';
    </script>
}
