<!DOCTYPE html>

<html lang="en">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta http-equiv="Content-Language" content="UTF-8" />
    <meta name="author" content="QQ:309685769" />
    <meta name="Copyright" content="Copyright" />
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="@Url.Content("~/Content/Bootstrap/bootstrap.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/Bootstrap/bootstrap-responsive.min.css")" />
    <style type="text/css">
        body {
            font-size: 12px;
        }
        .table{
            margin-bottom:0px;
        }
       
        .table td {
            vertical-align: middle;
        }
        .breadcrumb{
            margin-bottom:5px;
        }
    </style>

    <!-- HTML5shiv and Respond.js for IE8 to support HTML5 elements and media queries -->
    <!--[if lte IE 8]>
        <script type="text/javascript" src="@Url.Content("~/Script/html5shiv.min.js")"></script>
        <script type="text/javascript" src="@Url.Content("~/Script/respond.min.js")"></script>
    <![endif]-->

    @RenderSection("style", false)
</head>
<body>
    <div class="container-fluid">
        <!-- 面包屑 -->
        <div class="row-fluid">
            <div class="span12">
                <ul class="breadcrumb">
                    <li>
                        @Html.MvcSiteMap().SiteMapPath()
                    </li>
                </ul>
            </div>
        </div>
        @RenderBody()
    </div>
    <!-- script -->
    <!--[if !IE]> -->
    <script type="text/javascript">
        window.jQuery || document.write('<script type="text/javascript" src="@Url.Content("~/Script/jquery.min.js")">' + '<' + '/script>');
    </script>
    <!-- <![endif]-->
    <!--[if IE]>
    <script type="text/javascript">
     window.jQuery || document.write('<script type="text/javascript" src="@Url.Content("~/Script/jquery1x.min.js")">'+ '<' + '/script>');
    </script>
    <![endif]-->
    <script type="text/javascript">
        if ('ontouchstart' in document.documentElement) document.write('<script type="text/javascript" src="@Url.Content("~/Script/jquery.mobile.custom.min.js")">' + '<' + '/script>');
    </script>
    <script type="text/javascript" src="@Url.Content("~/Plugin/form.js")"></script>
    <link href="~/Plugin/DatePicker/skin/WdatePicker.css" rel="stylesheet" />
    <script src="~/Plugin/DatePicker/WdatePicker.js"></script>
    @RenderSection("script", false)
</body>
</html>
