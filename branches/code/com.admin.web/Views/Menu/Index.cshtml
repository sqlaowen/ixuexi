@{
    ViewBag.Title = "Index";
}

<!-- 操作 -->
<div class="row-fluid">
    <div class="span12 text-right" style="margin-bottom:5px;">
        <input type="button" class="btn btn-info btn-sm" value="添加" name="btnAdd" data-bind="click:function(d,e){addOne(d,e,'/User/Add/')}" />
        <input type="button" class="btn btn-info btn-sm" value="删除" name="btnDel" data-bind="click:function(d,e){delBatch(d,e,'/User/DelBatch/')}" />
        <input type="button" class="btn btn-info btn-sm" value="查询" name="btnsearch" data-bind="click:search" />
    </div>
</div>
<!-- 表单 -->
<div class="row-fluid">
    <div class="span12 table-responsive">
        <form role="form" id="form" class="form-horizontal">
            <table class="table table-striped table-bordered table-hover">
                <tr>
                    <td style="width:60px;">
                        邮箱：
                    </td>
                    <td>
                        <input type="text" />
                    </td>
                    <td style="width:60px;">
                        密码：
                    </td>
                    <td>
                        <input type="text" />
                    </td>
                    <td style="width:60px;">
                        地址：
                    </td>
                    <td>
                        <input type="text" />
                    </td>
                </tr>
            </table>
            <input type="hidden" id="hidPageIndex" name="pageIndex" value="1" />
        </form>
    </div>
</div>
<!-- 查询结果列表 -->
<div class="row-fluid">
    <div class="span12 table-responsive">
        <table class="table table-striped table-bordered table-hover" id="table">
            <thead style="background-color:#DBEAF9;">
                <tr>
                    <th style="width:60px;">
                        <label><input type="checkbox" name="ckfather" />No.</label>
                        <input type="hidden" name="_hidid_" />
                    </th>
                    <th>
                        菜单名
                    </th>
                    <th>
                        菜单地址
                    </th>
                    <th>
                        级别
                    </th>
                    <th>
                        父级ID
                    </th>
                    <th>
                        顺序
                    </th>
                    <th>
                        备注
                    </th>
                    <th>
                        操作时间
                    </th>
                    <th>
                        操作人
                    </th>
                    <th>
                        操作
                    </th>
                </tr>
            </thead>
            <tbody data-bind="foreach: items">
                <tr>
                    <td>
                        <label>
                            <input type="checkbox" name="ckson" data-bind="value:MenuId" />
                            <span data-bind="text:N0"></span>
                        </label>
                    </td>
                    <td data-bind="text:Name"></td>
                    <td data-bind="text:Url"></td>
                    <td data-bind="text:Level"></td>
                    <td data-bind="text:PId"></td>
                    <td data-bind="text:Sequ"></td>
                    <td data-bind="text:Note"></td>
                    <td data-bind="text:UpdateTime"></td>
                    <td data-bind="text:UpdateUser"></td>
                    <td>
                        <a class="btn btn-info btn-sm" name="hrefEdit" data-bind="click: function(d,e){ $parent.editOne(d,e,'/Menu/Add/'+MenuId)}">
                            修改
                        </a>
                        <a class="btn btn-info btn-sm" name="hrefDel" href="javascript:;" data-bind="click: function(d,e){ $parent.delOne(d,e,'/Menu/Del/')}">删除</a>
                        
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<!-- 分页 -->
<div class="row-fluid">
    <div class="span12">
        <ul class="pagination mypager" id="personPagination"></ul>
    </div>
</div>

@section style{
    <script type="text/javascript">
        var dataUrl = '/Menu/GetList/';
        var pageSize = 20;
        var formContainer = 'form';
        var bindingContainer = 'body';
    </script>
}
