<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo 
       http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

	<!-- 提供方应用信息，用于计算依赖关系 -->
	<dubbo:application name="app-authc-module" />

	<!-- 使用zookeeper注册中心暴露服务地址 -->
	<dubbo:registry address="${dubbo.registry.address}" protocol="zookeeper" />

	<!-- 用dubbo协议在20880端口暴露服务 -->
	<dubbo:protocol name="dubbo" port="${dubbo.protocol.port}" />

	<dubbo:monitor protocol="registry" />

	<!-- 声明需要暴露的服务接口 -->

	<!-- 用户 -->
	<dubbo:service interface="api.authc.single.service.SysUserService" ref="sysUserService" version="1.0" layer="single.service" owner="wenshiwei" />
	
	<!-- 角色 -->
	<dubbo:service interface="api.authc.single.service.SysRoleService" ref="sysRoleService" version="1.0" layer="single.service" owner="wenshiwei" />
	
	<!-- 资源(菜单、权限) -->
	<dubbo:service interface="api.authc.single.service.SysPermissionService" ref="sysPermService" version="1.0" layer="single.service" owner="wenshiwei" />
	
	<!-- 区域 -->
	<dubbo:service interface="api.authc.single.service.SysAreaService" ref="sysAreaService" version="1.0" layer="single.service" owner="wenshiwei" />
	
	<!-- 用户ref角色 -->
	<dubbo:service interface="api.authc.single.service.RefUserRoleService" ref="refUserRoleService" version="1.0" layer="single.service" owner="wenshiwei" />
	
	<!-- 角色ref资源 -->
	<dubbo:service interface="api.authc.single.service.RefRolePermService" ref="refRolePermService" version="1.0" layer="single.service" owner="wenshiwei" />
	
</beans>
